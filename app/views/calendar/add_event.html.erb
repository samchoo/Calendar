<h1>Sign up</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@event) do |f| %>
<%= form_tag(:controller => "posts", :action => "create") do %> 
      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.submit "Create my account", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>